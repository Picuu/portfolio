---
import { SOCIALS } from '@/Socials.js'
---


<p class="info">Puedes enviarme un correo a través de <strong class="mail" id="mail" data-tooltip-content="Copiar email">contact@picu.es</strong></p>

<div class="socials">
    {
        SOCIALS.map((social) => (
        <a href={social.link} target="_blank" rel="noopener noreferrer">
            <social.icon size="24" />
            <span>@{social.username}</span>
            <p>{social.description}</p>
        </a>
        ))
    }
</div>

<style>
    .info {
        margin-bottom: 1.25rem;
    }

    .mail {
        position: relative;
        display: inline-flex;
        flex-direction: column;
        align-items: center;
        font-weight: 450;
        color: var(--clr-lightblue-accent);
        text-decoration: underline;
        text-decoration-color: transparent;
        transition: text-decoration-color 150ms ease-in-out;

        &:hover {
            text-decoration-color: currentColor;
            cursor: pointer;
        }

        &:before {
            content: attr(data-tooltip-content);
            position: absolute;
            display: none;
            top: calc(-100% - 1rem);
            padding: .5rem .75rem;
            background-color: var(--clr-card-bg);
            border: 1px solid var(--clr-card-border);
            border-radius: 0.5rem;
            font-size: 0.875rem;
            font-weight: 500;
            line-height: 1.25rem;
            color: #eee;
        }

        &:after {
            content: "";
            position: absolute;
            display: none;
            bottom: calc(100% + .075rem);
            width: 24px;
            height: 12px;
            border: solid;
            border-color: var(--clr-card-bg) transparent;
            border-width: 0 12px 12px 12px;
            transform: rotateZ(180deg);
        }

        &:hover:before, &:hover:after, &:focus:before, &:focus:after {
            display: block;
            pointer-events: none;
        }
    }

    .socials {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(225px, 1fr));
        gap: 1rem;

        & a {
            display: flex;
            flex-direction: column;
            padding: 1rem;
            background-color: var(--clr-card-bg);
            border: 2px solid var(--clr-card-border);
            border-radius: .75rem;
            transition: background-color .2s ease-in-out, transform .2s ease-in-out;
        }

        & a:hover {
            background-color: var(--clr-card-border);
            transform: translateY(-4px);
            cursor: pointer;
        }

        & span {
            margin-top: .9rem;
            margin-bottom: .2rem;
            font-weight: 700;
        }
    
        & p {
            font-size: calc(var(--fs-200) - .06rem);
            font-weight: 300;
            color: var(--clr-text-secondary);
        }
    }

</style>

<script>
    const mail = document.getElementById('mail')
        
    mail?.addEventListener('click', () => {
        navigator.clipboard.writeText('contact@picu.es').then(() => {
            mail.setAttribute('data-tooltip-content', '✅ Copiado!')
            setTimeout(() => {
                mail.setAttribute('data-tooltip-content', 'Copiar email')
            }, 2000)
        })
    })
        
</script>
