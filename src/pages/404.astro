---
import Layout from "@/layouts/Layout.astro"
import SectionTitle from "@/components/SectionTitle.astro"

import ExclamationIcon from "@/icons/Exclamation.astro"
---

<Layout title="404 Not found! - Portfolio de Carlos Capó" description="Carlos Capó, Desarrollador y Programador Web.">
    <div class="container">
        <main>
            <h1>404</h1>
            
            <SectionTitle>
                <ExclamationIcon size="34" />
                No deberías estar aquí!
            </SectionTitle>
    
            <a href="/">Volver al inicio</a>
    
            <svg xmlns="http://www.w3.org/2000/svg" class="bug" viewBox="0 0 24 24" stroke-width="1" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                <path d="M9 9v-1a3 3 0 0 1 6 0v1" />
                <path d="M8 9h8a6 6 0 0 1 1 3v3a5 5 0 0 1 -10 0v-3a6 6 0 0 1 1 -3" />
                <path d="M3 13l4 0" />
                <path d="M17 13l4 0" />
                <path d="M12 20l0 -6" />
                <path d="M4 19l3.35 -2" />
                <path d="M20 19l-3.35 -2" />
                <path d="M4 7l3.75 2.4" />
                <path d="M20 7l-3.75 2.4" />
            </svg>
        </main>
    </div>
</Layout>

<style>
    .container {
        position: relative;
    }

    main {

        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        height: 80dvh;
        text-align: center;
    }

    h1 {
        margin-top: 2.5rem;
        font-size: 10rem;
    }

    a {
        margin-top: 2.5rem;
        font-size: 1.5rem;
        color: rgb(164, 220, 255);
    }

    a:hover {
        text-decoration: underline;
    }

    .bug {
        position: absolute;
        top: 0;
        left: 0;
        width: 500px;
        height: 500px;
        opacity: 0.05;
        transform: scale(3) translateX(23vw) translateY(11vh) rotateZ(40deg);
        z-index: -1;
    }

    @media (width < 768px) {
        .bug {
            width: 300px;
            height: 300px;
            transform: scale(3) translateX(20vw) translateY(11vh) rotateZ(40deg);
        }
    }
</style>

<style is:global>
    body {
        overflow: hidden !important;
    }
</style>
